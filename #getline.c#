/* this  function reads a line from stdin */

#include <stdio.h>
#include <unistd.h>
#include <limits.h>
#include <stdlib.h>

/**
 * _getline-reads a string from stdin
 * @ptr: the buffer to store the string
 * Return: number of characters it reads
 */

void _getline(char *ptr)
{
	char *buff;

	buff = ptr;
	while (*buff != '\n')
	{
		*buff = read(STDIN_;
		if (*buff == EOF)
		{
			break;
		}
		buff++;
	}
	if (*buff == '\n')
	{
		*buff = '\0';
	}
}
