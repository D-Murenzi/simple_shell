/* this program prints the environmental variables to stdout*/

#include <stdlib.h>
#include <stdio.h>
#include <unistd.h>

int main( int argc, char *argv[], char *env[])
{
	int a;

	if (argc > 1)
	{
		printf("error\n");
		exit(100);
	}

	printf("the environmental variables of %s prog are:\n", argv[0]);
		
	for (a = 0; env[a] != NULL; a++)
	{
		printf("%s\n",env[a]);
	}

	printf("\n \n");
	printf("the path variable is : %s", getenv("PATH"));
	return (0);
}
